{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "啟動 Next.js 開發伺服器",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "autoAttachChildProcesses": true
    },
    {
      "name": "啟動 Next.js 開發伺服器 (Turbopack)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "autoAttachChildProcesses": true
    }
  ]
} 